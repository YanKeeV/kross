@model SampleMvcApp.Models.UserModel
<style>
    .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-container {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
    }

    .form-input {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .form-submit {
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
    }

        .form-submit:hover {
            background-color: #0056b3;
        }
</style>
<div class="title">
    <span>Вхід</span>
</div>

<form asp-action="Login" method="post">
    
    <div class="form-container">
        <label class="form-label" asp-for="emailAddress">Email:</label>
        <input class="form-input" asp-for="emailAddress" type="text" />
        <span class="form-validation" asp-validation-for="emailAddress"></span>
    </div>

    <div class="form-container">
        <label class="form-label" asp-for="password">Пароль:</label>
        <input class="form-input" asp-for="password" type="password"/>
        <span class="form-validation" asp-validation-for="password"></span>
    </div>

    <button type="submit" class="form-submit">Увійти</button>
</form>